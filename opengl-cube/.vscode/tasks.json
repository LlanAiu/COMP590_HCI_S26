{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file (GLUT)",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/I",
				"${workspaceFolder}/include",
				"${file}",
				"/link",
				"/LIBPATH:${workspaceFolder}/lib/x64",
				"freeglut.lib",
				"opengl32.lib",
				"glu32.lib",
				"gdi32.lib",
				"user32.lib",
				"/OUT:${fileDirname}/${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$msCompile"],
			"detail": "Build active C/C++ file with GLUT and OpenGL libs"
		}
	]
}
